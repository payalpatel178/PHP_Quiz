{% extends "Base/base.twig" %}

{% block meta_tag_info %}
	<meta name="description" content="Sign In page of Awesome PHP Quiz website">
{% endblock %}

{% block page_title %}
	Sign Up
{% endblock %}

{% block main_content %}
	<section class="container">
		<h2>Create New Account</h2>
		<hr>
		{% include "Pages/message.twig" %}
		<div class="row">
			<div class="col-sm-12 col-md-6 offset-sm-2 offset-md-3">
				<form action="" class="font-weight-bold" method="POST">
					<div class="form-group">
						<label>Name</label>
						<input type="text" class="form-control" name="name" value="">
					</div>
					<div class="form-group">
						<label>Email</label>
						<input type="text" class="form-control" name="email" value="">
					</div>
					<div class="form-group">
						<label>Password</label>
						<input type="password" class="form-control" name="pword" value="">
					</div>
					<input type="hidden" name="id" value=""/><br/>
					<button type="submit" class="btn">Sign In</button>
				</form>
			</div>
		</div>
	</section>
{% endblock %}
