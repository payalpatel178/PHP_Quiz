{% extends "Base/base.twig" %}

{% block meta_tag_info %}
	<meta name="description" content="Login page of Awesome PHP Quiz website">
{% endblock %}

{% block page_title %}
	Login
{% endblock %}

{% block main_content %}
	<section class="container">
		<h2>Login</h2>
		<hr>
		{% include "Pages/message.twig" %}
		<div class="row">
			<div class="col-sm-12 col-md-6 offset-md-3">
				<form class="font-weight-bold" action="" method="POST">
					<div class="form-group">
						<label>Email Address</label>
						<input type="email" class="form-control" name="email">
					</div>
					<div class="form-group">
						<label>Password</label>
						<input type="password" class="form-control" name="pword">
					</div>
					<button type="submit" class="btn">Log Me In</button>
				</form>
				<div>
					<div class="text-right font-weight-bold">
						Create New Account
						<a class="btn" name="btnCreateNewAccount" href="signup">NEXT</a><br/>
					</div>
				</div>
			</div>
		</div>
	</section>
{% endblock %}
