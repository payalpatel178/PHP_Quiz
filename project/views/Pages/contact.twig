{% extends "Base/base.twig" %}

{% block meta_tag_info %}
	<meta name="description" content="Contact page of Awesome PHP Quiz website">
{% endblock %}

{% block page_title %}
	Contact Us
{% endblock %}

{% block main_content %}
	<section class="container">
		<h2>Getting in touch is easy!
		</h2>
		<hr>
		<div class="row">
			<div class="card text-center">
				<div class="m-3 card-body shadow-lg bg-white rounded">Your questions and comments are important for us.
					<br/>Contact us if you have any questions or inquiries. We would be happy to answer your questions.
					          Fill out the form information and we will be in touch as soon as possible.<br/>
					<i class="fas fa-phone-alt"></i>
					<a href="tel:5141234567" class="font-weight-bold" data-toggle="tooltip" title="Contact Number">514-123-4567</a><br/>

					<i class="fas fa-envelope"></i>
					<a href="mailto:info@awesomephpquiz.ca" target="_blank" class="font-weight-bold" data-toggle="tooltip" title="Email Address">info@awesomephpquiz.ca</a><br/>

					<i class="fas fa-map-marker-alt"></i>
					{% set addr= address %}
					<span class="font-weight-bold" data-toggle="tooltip" title="Location">{% if address %}{{address}}{% else %}21 275 Rue Lakeshore Road, Sainte-Anne-de-Bellevue, QC H9X 3L9, Canada{% endif %}</span>

				</div>
			</div>
		</div><br/>
		{% include "Pages/message.twig" %}
		<div class="row">
			<div class="col-sm-12 col-md-6 offset-md-3">
				<form action="" class="font-weight-bold" method="POST">
					<div class="form-group">
						<label>Name</label>
						<input type="text" class="form-control" name="name">
					</div>
					<div class="form-group">
						<label>Email</label>
						<input type="text" class="form-control" name="email">
					</div>
					<div class="form-group">
						<label>Message</label>
						<textarea type="text" class="form-control" name="message"></textarea>
					</div>
					<br/>
					<button type="submit" class="btn">Send Message</button>
				</form>
			</div>
		</div>
	</section>
{% endblock %}
